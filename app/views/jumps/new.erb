<h1>Create a new Jump:</h1>
<form action="/jumps" method="POST">

  <label>Jump type:</label>
  <% @type.each do |t| %>
    <% #binding.pry %>
  <input id='jump_type' type="radio" name="jump[type_of_jump]" value="<%= t %>"><%= t %>
    <% end %>
  <br>
  <label>Jump number:</label>
  <input id='jump_number' type="integer" name="jump[jump_number]">
  <br>
  <label>Altitude:</label>
  <input id='jump_altitude' type="integer" name="jump[altitude]">
  <br>
  <label>Description:</label>
  <input id='jump_description' type="text" name="jump[description]">
  <br>
  <label>User:</label>
  <%= @user.name %>
  <br>
  <input type="submit" value="Create New Jump">
</form>